{
    "tasks": [
        {
            "type": "shell",
            "label": "Windows build",
            "command": "D:\\MinGW\\bin\\g++.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-O2",
                "-Wall",
                "-Wextra",
                "-D",
                "DEBUG"
            ],
            "options": {
                "cwd": "D:\\MinGW\\bin"
            }
        },
        {
            "type": "shell",
            "label": "Linux build",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.o",
                "-O2",
                "-Wall",
                "-Wextra",
                "-D",
                "DEBUG"
            ],
            "options": {
                "cwd": ""
            }
        }
    ],
    "version": "2.0.0"
}